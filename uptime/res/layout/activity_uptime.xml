<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/uptime_whole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:text="Uptime" />

    <TextView
        android:id="@+id/uptime_whole_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/uptime_whole"
        android:layout_alignBottom="@+id/uptime_whole"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:text="00:00:00" />

    <TextView
        android:id="@+id/uptime_without_sleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/uptime_whole"
        android:layout_below="@+id/uptime_whole"
        android:layout_marginTop="30dp"
        android:text="Uptime without sleep" />

    <TextView
        android:id="@+id/uptime_without_sleep_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/uptime_without_sleep"
        android:layout_alignBottom="@+id/uptime_without_sleep"
        android:layout_alignLeft="@+id/uptime_whole_count"
        android:text="00:00:00" />

</RelativeLayout>